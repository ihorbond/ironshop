<form method="post" action="/products">
  <label for="product-name-input">Name of Product</label>
  <input id="product-name-input" type="text" name="productName">
   <br>
  <label for="product-price-input" >Price</label>
  <input id="product-price-input" type="number" step="0.1" name="productPrice">
  <br>
 <label for="product-image-input" >Image URL</label>
 <input id="product-image-input" type="url" name="productImageUrl">
 <br>
<label for="product-description-input" >Description</label>
<input id="product-description-input" type="text" name="productDescription">
<br>
  <button> Add This Product </button>
</form>
